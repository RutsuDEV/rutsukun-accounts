{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "@middlewares/*": ["middlewares/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@providers/*": ["providers/*"],
      "@models": ["models"],
      "@models/*": ["models/*"],
      "@entities/*": ["entities/*"],
      "@repositories/*": ["repositories/*"],
      "@routes": ["routes/index"],
      "@services/*": ["services/*"],
      "@utils": ["utils"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
  ],
  "exclude": [
    "dist/"
  ]
}